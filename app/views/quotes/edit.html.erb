<div class="grid-container">
  <div class="grid-row">
    <div class="grid-col-auto">
      <h1>Editing Quote</h1>

      <%= render 'form', quote: @quote, author_id: @quote.author.id %>
      <br>
      <%= link_to 'Remove Quote', @quote, method: :delete, data: { confirm: 'Are you sure?' }, class: 'usa-link' %>

    </div>
  </div>
</div>