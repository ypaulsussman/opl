<p id="notice"><%= notice %></p>

<h1>Quotes</h1>
<%= paginate @quotes %>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quotes.each do |quote| %>
      <tr>
        <td>"<em><%= quote.passage%></em>" - <span><%= link_to "#{quote.author.name}", quote.author %></span></td>
        <td><%= link_to 'Edit Quote', edit_quote_path(quote) %></td>
        <td><%= link_to 'Remove Quote', quote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Quote', new_quote_path %>
