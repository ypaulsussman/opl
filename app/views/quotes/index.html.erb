<h1>Quotes</h1>
<%= link_to 'New Quote', new_quote_path %>
<span><%= link_to 'See All Authors', authors_path %></span>
<%= paginate @quotes, window: 1, outer_window: 3 %>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quotes.each do |quote| %>
      <tr>
        <td>"<em><%= quote.passage%></em>" - <span><%= link_to "#{quote.author.name}", quote.author %></span></td>
        <td><%= link_to 'Edit', edit_quote_path(quote) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

