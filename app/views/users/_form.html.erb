<%= form_with model: user, local: true, class: 'usa-form' do |f| %>
  <% if user.errors.any? %>
    <%= render partial: 'layouts/errors', locals: {resource: user} %>
  <% end %>

  <%= f.label :name, class: 'usa-label' %>
  <%= f.text_field :name, class: 'usa-input' %>

  <%= f.label :email, class: 'usa-label' %>
  <%= f.text_field :email, class: 'usa-input' %> 

  <% if ["edit","update"].include? action_name %>
    <%= f.label :slug, "Personal URL path", class: 'usa-label' %>
    <%= f.text_field :slug, class: 'usa-input' %> 
    <div><em>(Only lowercase letters, numbers, underscores, and hyphens will be preserved.)</em></div>
  <% end %>

  <%= f.label :password, class: 'usa-label' %>
  <%= f.password_field :password, class: 'usa-input' %> 

  <%= f.label :password_confirmation, class: 'usa-label' %>
  <%= f.password_field :password_confirmation, class: 'usa-input' %> 

  <div class="usa-checkbox">
    <%= f.check_box :receive_qotd, class: 'usa-checkbox__input' %>
    <%= f.label :receive_qotd, "Email me a random daily quote!", class: 'usa-checkbox__label' %> 
  </div>

  <%= f.submit nil, class: "usa-button usa-button--outline" %>
<% end %>
