<div class="grid-container">
  <div class="grid-row">
    <div class="grid-col-auto">

      <h1>Users</h1>

      <%= link_to 'Add User', new_user_path, class: 'usa-link' %>

      <table class="usa-table usa-table--borderless">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th colspan="2" scope="col"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= link_to 'Edit', edit_user_path(user), class: 'usa-link' %></td>
              <% if !current_user?(user) %>
                <td>
                  <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'usa-link' %>
                </td>
              <% else %>
                <td></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= paginate @users, window: 1, outer_window: 3 %>

    </div>
  </div>
</div>