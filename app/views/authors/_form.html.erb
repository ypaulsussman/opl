<%= form_with model: author, local: true, class: 'usa-form' do |f| %>
  <% if author.errors.any? %>
    <%= render partial: 'layouts/errors', locals: {resource: author} %>
  <% end %>

    <%= f.label :name, class: 'usa-label' %>
    <%= f.text_field :name, class: 'usa-input' %>

    <%= f.submit nil, class: "usa-button usa-button--outline" %>
<% end %>