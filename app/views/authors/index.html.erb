<div class="grid-container">
  <div class="grid-row">
    <h1>Browse Authors</h1>
    <%= button_to(
      "Order by name", 
      {}, 
      { 
        method: :get, 
        params: {sort_by: 'name'}, 
        class: 'usa-button usa-button--outline sort-toggle', 
        disabled: (@current_sort == 'name')
      } )%>
    <%= button_to(
      "Order by quotes", 
      {}, 
      { 
        method: :get, 
        params: {sort_by: 'quotes'}, 
        class: 'usa-button usa-button--outline sort-toggle', 
        disabled: (@current_sort == 'quotes') 
      }) %>
  </div>
  <div class="grid-row">
    <table class="usa-table usa-table--borderless woof-no-top-margin">
      <tbody>
        <% @authors_in_threes.each do |a| %>
          <tr>
            <td><%= render 'authorial_link', author: a[0] %></td>
            <% if a[1].present? %>
              <td class="central-author"><%= render 'authorial_link', author: a[1] %></td>
            <% end %>
            <% if a[2].present? %>
              <td class="right-author"><%= render 'authorial_link', author: a[2] %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<footer class="usa-footer usa-footer--slim">
  <div class="usa-footer__primary-section">
    <div class="usa-footer__primary-container grid-row">
      <nav class="usa-footer__nav">
        <ul class="grid-row grid-gap">
          <%= paginate @authors, window: 1, outer_window: 3 %>
        </ul>
      </nav>
    </div>
  </div>
</footer>