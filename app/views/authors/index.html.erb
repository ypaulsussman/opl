<p id="notice"><%= notice %></p>

<h1>Authors</h1>
<%= paginate @authors %>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.name%> - <%= pluralize(author.quotes_count, 'quote')%></td>
        <td><%= link_to 'Show All Quotes', author %></td>
        <td><%= link_to 'Edit Author', edit_author_path(author) %></td>
        <td><%= link_to 'Remove Author', author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Author', new_author_path %>
