<div class="grid-container">
  <div class="grid-row">
    <div class="grid-col-auto">
      <h1><%=@author.name%></h1>

      <% if current_user&.admin? %>
        <span class="author-options">
          <%= link_to 'Edit Author', edit_author_path(@author), class: 'usa-link' %>
          </span>
        <span class="author-options">
          <%= link_to "New Quote", new_quote_path(author_id: @author.id), class: 'usa-link' %>
        </span>
      <% end %>

      <table class="usa-table usa-table--borderless">
        <tbody>
          <% @author.quotes.each do |quote| %>
            <tr>
              <td class="lil-cell-space">
              <%= quote.passage%>
              </td>
              <% if current_user&.admin? %>
                <td><%= link_to 'Edit', edit_quote_path(quote), class: "edit-quote-link" %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>