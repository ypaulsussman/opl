<div class="grid-container">
  <div class="grid-row">
    <div class="grid-col-auto">
      <h1>Log in</h1>
      <div>
        <%= form_with url: login_path, scope: :session, local: true, class: 'usa-form' do |f| %> 
          <%= f.label :email, class: 'usa-label' %>
          <%= f.email_field :email, class: 'usa-input' %> 
          
          <%= f.label :password, class: 'usa-label' %>
          <%= f.password_field :password, class: 'usa-input' %> 
          <%= link_to "Forgot password?", new_password_reset_path %>

          <div class="usa-checkbox">
            <%= f.check_box :remember_me, class: 'usa-checkbox__input' %>
            <%= f.label :remember_me, 'Remember me', class: 'usa-checkbox__label' %> 
          </div>

          <%= f.submit "Log in", class: "usa-button usa-button--outline" %>
        <% end %>
        <div>
          <p>New user? <%= link_to "Sign up now!", signup_path %></p> 
        </div>
      </div>
    </div>
  </div>
</div>