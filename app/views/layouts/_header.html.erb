<a class="usa-skipnav" href="#main-content">Skip to main content</a>
<div class="usa-banner">
  <div class="usa-accordion">
    <header class="usa-header usa-header--basic">
      <div class="usa-nav-container">
        <div class="usa-navbar">
          <div class="usa-logo">
            <em class="usa-logo__text">
              <%= link_to "Other People's Lines", root_path %>
            </em>
          </div>
        </div>
        <div class="usa-nav">
          <nav class="usa-accordion">
            <ul class="usa-nav__primary usa-accordion">
            <% if controller_name != 'quotes'%>
              <li class="usa-nav__primary-item">
                <%= link_to "Browse Quotes", quotes_path %>
              </li>
            <% end %>
            <% if controller_name != 'authors'%>
              <li class="usa-nav__primary-item">
                <%= link_to "Browse Authors", authors_path %>
              </li>
            <% end %>
            <% if logged_in? %>
              <li class="usa-nav__primary-item">
                <%= link_to "My Settings", edit_user_path(current_user) %>
              </li>
              <% if current_user&.admin? %>
                <li class="usa-nav__primary-item">
                  <%= link_to "All Users", users_path %>
                </li>
              <% end %>
              <li class="usa-nav__primary-item">
                <%= link_to "Log Out", logout_path, method: :delete %>
              </li>
            <% else %>
              <li class="usa-nav__primary-item">
                <%= link_to "Log In", login_path %>
              </li>
              <% if Rails.configuration.allow_signups %>
                <li class="usa-nav__primary-item">
                  <%= link_to "Sign Up", signup_path %>
                </li>
              <% end %>
            <% end %>
            </ul>
          </nav>
        </div>  
      </div>
    </header>
  </div>
</div>