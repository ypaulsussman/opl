<!DOCTYPE html>
<html>
  <head>
    <title>Opl</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'scaffolds', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <% flash.each do |message_type, message| %>
      <div class="usa-alert usa-alert--<%= message_type %>" role="alert">
        <p class="usa-alert__text">
          <%= message %>
        </p>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
